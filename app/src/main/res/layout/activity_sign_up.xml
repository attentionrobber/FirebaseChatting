<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hyunseok.android.firebasechat.SignUpActivity">

    <Button
        android:id="@+id/btn_confirm"
        android:text="CONFIRM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_cancle"
        android:layout_alignBottom="@+id/btn_cancle"
        android:layout_toRightOf="@+id/btn_cancle"
        android:layout_toEndOf="@+id/btn_cancle" />

    <Button
        android:id="@+id/btn_cancle"
        android:text="cancle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/et_nickname_signup"
        android:hint="input nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_pw_signup"
        android:layout_toRightOf="@+id/textView_nick"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView_nick"
        android:text="NICKNAME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal|bold"
        android:layout_alignBaseline="@+id/et_nickname_signup"
        android:layout_alignBottom="@+id/et_nickname_signup"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/et_id_signup"
        android:hint="input id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/et_pw_signup"
        android:layout_alignStart="@+id/et_pw_signup"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/et_pw_signup"
        android:hint="input password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_id_signup"
        android:layout_alignLeft="@+id/et_nickname_signup"
        android:layout_alignStart="@+id/et_nickname_signup"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="ID"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/textview12"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:layout_alignBaseline="@+id/et_id_signup"
        android:layout_alignBottom="@+id/et_id_signup"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="PW"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/textview13"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:layout_alignBaseline="@+id/et_pw_signup"
        android:layout_alignBottom="@+id/et_pw_signup"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
